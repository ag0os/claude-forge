{
	"permissions": {
		"allow": [
			"Bash",
			"Read",
			"Write",
			"Edit",
			"Glob",
			"Grep",
			"Task",
			"TodoWrite"
		],
		"deny": []
	},
	"systemPromptFiles": ["system-prompts/forge-task-coordinator-prompt.md"],
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "bun run $CLAUDE_FORGE_DIR/hooks/coordinator-progress.ts"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "bun run $CLAUDE_FORGE_DIR/hooks/coordinator-complete.ts"
					}
				]
			}
		]
	}
}
